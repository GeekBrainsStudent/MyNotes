<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyNotes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/cyan50</item>
        <item name="textInputStyle">@style/MyTextInputLayoutStyle</item>
        <item name="appBarLayoutStyle">@style/MyAppBarLayoutStyle</item>
        <item name="toolbarStyle">@style/MyToolbarStyle</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="MenuItemStyle">
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="MyNavigationViewStyle">
        <item name="android:background">@color/cyan50</item>
    </style>

    <style name="MyNavigationViewHeaderStyle">
        <item name="android:background">@color/cyan900</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textViewStyle">@style/NavHeaderTextInputEditTextStyle</item>
    </style>

    <style name="NavHeaderTextInputTextLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/cyan900</item>
    </style>


    <style name="NavHeaderTextInputEditTextStyle">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="color">@color/white</item>
    </style>

    <style name="MyToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/cyan900</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <!--<style name="MyAppBarLayoutStyle" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">@color/cyan500</item>
    </style>-->

    <style name="MyTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/cyan50</item>
    </style>

    <style name="TitleStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline4</item>
    </style>

    <style name="DescribeStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
    </style>

    <style name="FragmentRootStyle">
        <item name="android:padding">@dimen/rootFragmentPadding</item>
    </style>
</resources>