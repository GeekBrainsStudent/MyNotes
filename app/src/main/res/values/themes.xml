<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyNotes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@color/cyan50</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/cyan50</item>
    </style>

    <style name="Widget.App.TextInputEditText.titleStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/titleTextSize</item>
    </style>

    <style name="Widget.App.TextInputEditText.describeStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/describeTextSize</item>
    </style>

    <style name="fragmentRootStyle">
        <item name="android:padding">@dimen/rootFragmentPadding</item>
    </style>
</resources>